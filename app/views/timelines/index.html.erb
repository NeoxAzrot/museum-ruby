<section class="timeline">
  <div class="container">

    <% @timelines.each_with_index do |timeline, index| %>
      <% if index % 2 == 0%>

        <div class="timeline-item">

          <div class="timeline-img"></div>

          <div class="timeline-content timeline-card js--fadeInLeft">
            <div class="timeline-img-header" style="background: url('<%= timeline.icon %>') center center no-repeat;">
              <h2><%= timeline.title %></h2>
            </div>
            <div class="date"><%= timeline.dates %></div>
            <p><%= timeline.description %></p>
            <a class="bnt-more" href="<%= timeline.link %>">Voir les oeuvres</a>
          </div>

        </div>  

      <% else %>

        <div class="timeline-item">

          <div class="timeline-img"></div>

          <div class="timeline-content timeline-card js--fadeInRight">
            <div class="timeline-img-header" style="background: url('<%= timeline.icon %>') center center no-repeat;">
              <h2><%= timeline.title %></h2>
            </div>
            <div class="date"><%= timeline.dates %></div>
            <p><%= timeline.description %></p>
            <a class="bnt-more" href="<%= timeline.link %>">Voir les oeuvres</a>
          </div>
        </div>  

      <% end %>

    <% end %>

  </div>
</section>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Icon</th>
      <th>Link</th>
      <th>Dates</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @timelines.each_with_index do |timeline, index| %>
      <tr>
        <td><%= timeline.title %></td>
        <td><%= timeline.description %></td>
        <td><%= timeline.icon %></td>
        <td><%= timeline.link %></td>
        <td><%= timeline.dates %></td>
        <td><%= index %></td>
        <td><%= link_to 'Show', timeline %></td>
        <td><%= link_to 'Edit', edit_timeline_path(timeline) %></td>
        <td><%= link_to 'Destroy', timeline, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

