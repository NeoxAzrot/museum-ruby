<% if @timeline.title == "Les coups de cœurs"%>

<!-- Page Content -->
<section class="py-5">
  <div class="container">
    <h1 class="display-4"><%= @timeline.title %></h1>
    <p class="lead"><%= @timeline.description %></p>
    <a href="./" class="btn btn-primary">Revenir à l'accueil</a>
  </div>
</section>

<header>
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <% @timeline.arts.sort.each_with_index do |art, index| %>
          <% if index == 0 %>
            <li data-target="#carouselExampleIndicators" data-slide-to="<%= index %>" class="active"></li>
          <% else %>
            <li data-target="#carouselExampleIndicators" data-slide-to="<%= index %>"></li>
          <% end %>
        <% end %>
    </ol>
    <div class="carousel-inner" role="listbox">
      <% @timeline.arts.sort.each_with_index do |art, index| %>
        <% if index == 0 %>
          <div class="carousel-item active" style="background-image: url('<%= art.image %>');">
            <div class="opacity_shadow_slideshow"></div>
            <div class="carousel-caption">
              <h2 class="display-4"><%= art.title %></h2>
              <p class="lead d-none d-md-block"><%= art.description %></p>
            </div>
          </div>
        <% else %>
          <div class="carousel-item" style="background-image: url('<%= art.image %>');">
            <div class="opacity_shadow_slideshow"></div>
            <div class="carousel-caption">
              <h2 class="display-4"><%= art.title %></h2>
              <p class="lead d-none d-md-block"><%= art.description %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
  </div>
</header>

<% else %>

<div id="show_page">
  <section id="header" class="jumbotron text-center">
     <h1 class="display-3"><%= @timeline.title %></h1>
     <p class="lead"><%= @timeline.description %></p>
     <a href="./" class="btn btn-primary no-border">Revenir à l'accueil</a>
  </section>
    
  <section id="gallery">
    <div class="container">
      <div class="row">
        <% @timeline.arts.sort.each do |art| %>
    
          <div class="col-lg-4 mb-4">
            <div class="card">
              <img src="<%= art.image %>" class="card-img-top">
              <div class="card-body">
                <h5 class="card-title"><%= art.title %></h5>
                <p class="card-text"><%= art.description %></p>
                <div class="footer-card">
                  <p class="author-text"><%= art.author %></p>
                  <p class="date-text"><%= art.date %></p>
                </div>
              </div>
           </div>
        </div>

        <% end %>
      </div>
    </div>
  </section>
</div>


<% end %>